
<div class="row">
  <div class="col-md-6 offset-md-3">
      <h1>
        <%= @user.username%>
      </h1>


      <ul class="nav nav-pills nav-justified">

        <li class="nav-item">
          <%= link_to "Posts", user_path(@user.username), class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Liked Photos", liked_photos_path(@user.username), class: "nav-link"%>
        </li>
        
        <li class="nav-item">
          <%= link_to "Feed", feed_path(@user.username), class: "nav-link"%>
        </li>

        <li class="nav-item">
          <%= link_to "Followers", followers_path(@user.username), class: "nav-link"%>
        </li>


        <li class="nav-item">
          <%= link_to "Following", following_path(@user.username), class: "nav-link"%>
        </li>

      </ul>
  </div>
</div>


<%= @user.leaders.count %>

<div class="col-md-6 offset-md-3">
<ul class="list-group">

  
  <% @user.leaders.each do |leader| %>
    <li class="list-group-item"><%= link_to leader.username, following_path(leader.username)  %></li>
  <% end %>

</ul>
</div>

  
